<!DOCTYPE html>
<html>
<head>
	
	<%- include ("partials/head") %>
	<link rel="stylesheet" type="text/css" href="/css/buyer_dashboard.css">
</head>

<body id= "<%= name %>">

	<%= name %>

	<%- include ('partials/logged_in_header') %>
	<%- include ('partials/items_navbar') %>

	<div class="container">
		<div class="row">
			<% for (var i=0; i<items.length; i++) { %>
				<div class="col-sm-4">
					<div class="card">
						<a href="/products/id/<%= items[i]._id %> ">
							<img class="card-img-top" src="<%= items[i].images  %> ">
						</a>

						<div class="card-body">
							<h6><%= items[i].name %> </h6>
							<p>Rs. <%= items[i].price %></p>

							<div data-toggle="tooltip" title="Wishlist" class="material-icons" id="<%= items[i].id %>">shopping_cart</div>
						</div>
					</div>
				</div>
			<% } %>
		</div>	
	</div>


<script type="text/javascript" src="/js/buyer_dashboard.js"></script>
</body>
</html>