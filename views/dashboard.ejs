<!DOCTYPE html>
<html>
<head>
	<%- include ("partials/head") %>
</head>
<body>

	<%- include ('partials/logged_in_header') %>

	<h1>Welcome <%= name %></h1>

	<button><a href="/products/add">Add products</a></button>

	<% items.forEach(item =>{ %>
	<a href="/products/id/<%= item._id %>">
		<div class="card" style="width: 30%;float: left;">
			<img class="card-img-top" src="<%= item.images%>" style="width:80%;height: 60%;">
			<div class="card-body">
				<h4 class="card-title"><%= item.name %></h4>
				<p><%= item.category %></p>
				<p><%= item.price %></p>
			</div>
		</div>
	</a>
	<% }) %>


</body>
</html>